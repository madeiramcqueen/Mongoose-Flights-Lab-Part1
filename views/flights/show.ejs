<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Flight Details</title>
        </head>

        <body>
            <section id="show-page">
                <div>Airline: </div>
                <div>
                    <%= flight.airline %>
                </div>
                <div>Airport: </div>
                <div>
                    <%= flight.airport %>
                </div>
                <div>Flight Number: </div>
                <div>
                    <%= flight.flightNo %>
                </div>
                <div>Departs: </div>
                <div>
                    <%= flight.departs %>
                </div>
            </section>

            <br><br>
            <h2>Add A Destination</h2>
            <form action="/flights/<%= flight._id %>/destinations" method="POST">
                <label>Airport:
                    <select name="airport">
                        <option value="AUS">Austin</option>
                        <option value="DEN">Denver</option>
                        <option value="DFW">Dallas Fort Worth</option>
                        <option value="LAX">Las Angeles</option>
                        <option value="SAN">San Diego</option>
                    </select>
                </label><br>
                <label for="arrival"> Arrival Date & Time: </label>
                <input type="datetime-local" id="arrival" name="arrival">
                <br>
                <input type="submit" value="Add Arrival">
            </form>
            <a href="/flights/<%= flight._id %>/tickets/new">New Ticket</a>

            <% flight.destinations.forEach(function(d) { %>
                <div>
                    <div>
                        <%= d.airport %>
                    </div>
                    <div>
                        <%= d.arrival %>
                    </div>
                </div>
                <% }); %>
        </body>

</html>